<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:padding="10dp"
    tools:context=".AdminHomePage">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/avatar"
        android:id="@+id/avataradmin"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoadmin"
        android:fontFamily="@font/montserrat"
        android:text="DASHBOARD AMMINISTRATORE"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/avataradmin"
        android:textSize="21sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/insertbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INSERISCI UN LIBRO"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/crimison"
        android:fontFamily="@font/montserrat"
        android:layout_below="@+id/avataradmin"/>

    <Button
        android:id="@+id/logoutadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/crimison"
        android:fontFamily="@font/montserrat"
        android:layout_below="@+id/insertbook"/>

</RelativeLayout>